{
  "name": "http2-cli",
  "version": "1.1.1",
  "description": "Modern and lightweight command line HTTP/2 client",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "homepage": "https://github.com/kevinpollet/http2-cli#readme",
  "repository": "github:kevinpollet/http2-cli",
  "bugs": "https://github.com/kevinpollet/http2-cli/issues",
  "license": "MIT",
  "keywords": [
    "http",
    "http2",
    "client",
    "cli",
    "command-line",
    "terminal",
    "console"
  ],
  "bin": {
    "http2": "bin/http2.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist lib coverage",
    "docker:build": "scripts/docker-build.js",
    "docker:publish": "scripts/docker-publish.js",
    "format": "prettier --write '{bin,src,test,scripts}/**/*' '*.{json,md,yml}'",
    "lint:src": "eslint 'src/**'",
    "lint:test": "eslint 'test/**'",
    "prebuild": "rimraf lib && npm run lint:src",
    "prepare": "rimraf dist && npm run build",
    "pretest": "rimraf coverage && npm run lint:test",
    "release": "np --no-publish --no-yarn",
    "test": "jest test --preset ts-jest --coverage --collectCoverageFrom='src/**' --collectCoverageFrom='!src/@types/**'",
    "pkg": "pkg . --targets node12-linux,node12-macos,node12-win --out-path dist"
  },
  "dependencies": {
    "chalk": "2.4.2",
    "json-colorizer": "2.2.1",
    "yargs": "14.2.0"
  },
  "devDependencies": {
    "@kevinpollet/tsconfig": "0.1.0",
    "@types/jest": "24.0.18",
    "@types/node": "8.10.48",
    "@types/yargs": "13.0.3",
    "@typescript-eslint/eslint-plugin": "2.3.3",
    "@typescript-eslint/parser": "2.3.3",
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.4.0",
    "execa": "2.1.0",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "lint-staged": "9.4.2",
    "np": "5.1.1",
    "pkg": "4.4.0",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "semver": "6.3.0",
    "ts-jest": "24.1.0",
    "typescript": "3.6.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "overrides": [
      {
        "files": [
          "*.test.ts"
        ]
      },
      {
        "files": [
          "scripts/*.js"
        ]
      }
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md,yml,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
