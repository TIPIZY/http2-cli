{
  "name": "http2-cli",
  "version": "1.0.0-alpha.0",
  "description": "Modern command line HTTP/2 client",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "homepage": "https://github.com/kevinpollet/http2-cli#readme",
  "repository": "github:kevinpollet/http2-cli",
  "bugs": "https://github.com/kevinpollet/http2-cli/issues",
  "license": "MIT",
  "keywords": [
    "http",
    "http2",
    "cli",
    "command-line"
  ],
  "bin": {
    "http2": "bin/http2.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib",
    "format": "prettier --write '**/*.{ts,json,md,yml,js}' '!lib/**/*'",
    "lint": "eslint 'src/**'",
    "prebuild": "npm run clean && npm run lint",
    "release": "np"
  },
  "dependencies": {
    "chalk": "2.4.2",
    "yargs": "13.2.2"
  },
  "devDependencies": {
    "@kevinpollet/tsconfig": "0.1.0",
    "@types/node": "8.10.48",
    "@types/yargs": "13.0.0",
    "@typescript-eslint/eslint-plugin": "1.7.0",
    "@typescript-eslint/parser": "1.7.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.2.0",
    "husky": "2.2.0",
    "lint-staged": "8.1.6",
    "np": "5.0.1",
    "prettier": "1.17.0",
    "rimraf": "2.6.3",
    "typescript": "3.4.5"
  },
  "np": {
    "publish": false,
    "yarn": false
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        2,
        {
          "allowExpressions": "true"
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md,yml,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
