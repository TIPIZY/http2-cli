{
  "name": "http2-cli",
  "version": "1.1.1",
  "description": "Modern and lightweight command line HTTP/2 client",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "homepage": "https://github.com/kevinpollet/http2-cli#readme",
  "repository": "github:kevinpollet/http2-cli",
  "bugs": "https://github.com/kevinpollet/http2-cli/issues",
  "license": "MIT",
  "keywords": [
    "http",
    "http2",
    "client",
    "cli",
    "command-line",
    "terminal",
    "console"
  ],
  "bin": {
    "http2": "bin/http2.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf lib coverage",
    "docker:build": "scripts/docker-build.js",
    "docker:publish": "scripts/docker-publish.js",
    "format": "prettier --write '{bin,src,test,scripts}/**/*' '*.{json,md,yml}'",
    "lint:src": "eslint 'src/**'",
    "lint:test": "eslint 'test/**'",
    "prebuild": "rimraf lib && npm run lint:src",
    "pretest": "rimraf coverage && npm run lint:test",
    "release": "np",
    "test": "jest test --coverage --collectCoverageFrom='src/**' --collectCoverageFrom='!src/@types/**'"
  },
  "dependencies": {
    "chalk": "2.4.2",
    "json-colorizer": "2.2.1",
    "yargs": "13.2.4"
  },
  "devDependencies": {
    "@kevinpollet/tsconfig": "0.1.0",
    "@types/jest": "24.0.13",
    "@types/node": "8.10.48",
    "@types/yargs": "13.0.0",
    "@typescript-eslint/eslint-plugin": "1.9.0",
    "@typescript-eslint/parser": "1.9.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "execa": "1.0.0",
    "husky": "2.3.0",
    "jest": "24.8.0",
    "lint-staged": "8.1.7",
    "np": "5.0.2",
    "prettier": "1.17.1",
    "rimraf": "2.6.3",
    "semver": "6.1.1",
    "ts-jest": "24.0.2",
    "typescript": "3.5.1"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "np": {
    "publish": false,
    "yarn": false
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        2,
        {
          "allowExpressions": "true"
        }
      ]
    },
    "overrides": [
      {
        "env": {
          "jest": true
        },
        "files": [
          "*.test.ts"
        ]
      },
      {
        "files": [
          "scripts/*.js"
        ],
        "rules": {
          "@typescript-eslint/no-var-requires": [
            0
          ]
        }
      }
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md,yml,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
